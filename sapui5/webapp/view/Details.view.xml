<mvc:View controllerName="SR.sapui5.controller.Details"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core"
    xmlns="sap.m" xmlns:logali="SR.sapui5.control">
    <Page id="page" title="{i18n>detailsPageTitle}" showNavButton="true" navButtonPress=".onNavBack">
        <ObjectHeader id="headreXD" title="{northwind>Quantity} : {northwind>ProductName}" fullScreenOptimized="true" responsive="true">
            <attributes>
                <ObjectAttribute  id="obj1" text="{northwind>ShipName}" />
                <ObjectAttribute  id="obj2" text="{northwind>ShipAddress}" />
                <ObjectAttribute  id="obj3" text="{northwind>ShipCity}" />
                <ObjectAttribute  id="obj4" text="{northwind>ShipRegion}" />
                <ObjectAttribute  id="obj5" text="{northwind>ShipPostalCode}" />
                <ObjectAttribute  id="obj6" text="{northwind>ShipCountry}" />
                <ObjectAttribute  id="obj7" text="{northwind>ShipCountry}" />
                <ObjectAttribute  id="obj8" text="{northwind>CustomerID}" />
                <ObjectAttribute  id="obj9" text="{northwind>CustomerName}" />
            </attributes>
        </ObjectHeader>
        <logali:ProductRating id="rating" class="sapUiSmallMarginBeginEnd" change=".onRatingChange"/>
    </Page>
</mvc:View>
